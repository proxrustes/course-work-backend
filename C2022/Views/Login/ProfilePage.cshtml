@model DBAccess.Models.User
@{
    ViewData["Title"] = "Profile Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
  </head>

<body class="text-center" data-new-gr-c-s-check-loaded="14.1060.0" data-gr-ext-installed="">
    
    <div class="row py-5 px-4">
        <div class="col-md-5 mx-auto"> 
            <div class="bg-white shadow rounded overflow-hidden"> 

                <div class="px-4 py-5 my-5 text-center">
    <img class="rounded-circle" src=@Model.imageLink alt="" width="200" height="200">
    <h1 class="display-5 fw-bold">@Model.userName</h1>
     </div>
                                 <div class="px-4 py-3">
                                     <h5 class="mb-0">About</h5> <div class="p-4 rounded shadow-sm bg-light"> 
                                         <p class="font-italic mb-0">@Model.bio</p> 
                                        
                                         </div></div>
                                         
                                      <center>
  <h1>Your Characters: </h1>
  <ul class="list-group list-group-flush">
  @if (Model.characters!=null)
  {
        foreach (var item in Model.characters)
        {
             <li class="list-group-item">
                  <img class="rounded-circle" src=@item.imageLink alt="" width="70" height="70">
                  @Html.DisplayFor(modelItem => item.firstName) @Html.DisplayFor(modelItem => item.lastName)
                  
                  
                  <button type="button" class="btn btn-primary btn-sm">
                  <a href="https://localhost:44342/characters/view/@item.characterId" class="nav-link text-dark" asp-area="" asp-controller="Characters" asp-action="EditCharacter">View</a>
                  </button>

<button type="button" class="btn btn-primary btn-sm">
    <a href="https://localhost:44342/characters/remove/@item.characterId" class="nav-link text-dark" asp-area="" asp-controller="Characters" asp-action="RemoveCharacter">Delete</a>
</button>
             </li>
        }
   }

   else
   {
       <h1>empty. create some:</h1>
   }
</ul>
    <button type="button" class="btn btn-primary btn-sm">
    <a class="nav-link text-dark" asp-area="" asp-controller="Characters" asp-action="AddCharacter">Add</a>
</button>
     </center>

                                     </div> </div> 
</div>

</body>
</html>

